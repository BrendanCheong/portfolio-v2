---
import Card from '@/components/ui/Card.astro';
import CardContent from '@/components/ui/CardContent.astro';
import CardFooter from '@/components/ui/CardFooter.astro';
import CardHeader from '@/components/ui/CardHeader.astro';
import CardTitle from '@/components/ui/CardTitle.astro';
import Badge from '@/components/ui/Badge.astro';
import { Icon } from '@/components/Icon';
import { Image } from 'astro:assets';

interface Project {
  name: string;
  description: string;
  image?: string;
  tags?: string[];
  links?: Array<{ name: string; href: string; icon: string }>;
}

interface Props {
  project: Project;
}

const { project } = Astro.props;
const { name, description, image, tags, links } = project;

// Import images dynamically for optimization
const projectImages: Record<string, any> = {
  'build-me': () => import('@/assets/projects/build-me.png'),
  'lights-and-locks': () => import('@/assets/projects/lights-and-locks.png'),
  'task-master': () => import('@/assets/projects/task-master.png'),
};

const getImageName = (imagePath: string): string | null => {
  const match = imagePath.match(/\/([^/]+)\.png$/);
  return match ? match[1] : null;
};

const img = image ? getImageName(image) : null;
---

<Card className="flex flex-col overflow-hidden">
  <CardHeader className="p-0">
    {image && img && projectImages[img] && (
      <div class="aspect-video w-full overflow-hidden">
        <Image
          src={projectImages[img]()}
          alt={name}
          width={400}
          height={225}
          format="webp"
          quality={85}
          loading="lazy"
          class="h-full w-full object-cover object-top transition-transform duration-300 group-hover:scale-105"
        />
      </div>
    )}
    {image && (!img || !projectImages[img]) && (
      <div class="aspect-video w-full overflow-hidden">
        <img
          src={image}
          alt={name}
          loading="lazy"
          class="h-full w-full object-cover object-top transition-transform duration-300 hover:scale-105"
        />
      </div>
    )}
  </CardHeader>
  <CardContent className="flex flex-1 flex-col gap-2 p-4">
    <CardTitle className="text-base">{name}</CardTitle>
    <p class="text-xs text-muted-foreground line-clamp-3">{description}</p>
  </CardContent>
  <CardFooter className="flex-col gap-3 !items-start">
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-1">
        {tags.sort().map((tag) => (
          <Badge variant="secondary" className="px-1.5 py-0.5 text-[10px]">
            {tag}
          </Badge>
        ))}
      </div>
    )}
    {links && links.length > 0 && (
      <div class="flex flex-wrap gap-1">
        {links.map((link) => (
          <a href={link.href} target="_blank" rel="noopener noreferrer">
            <Badge className="flex items-center gap-1 px-2 py-1 text-[10px]">
              <Icon name={link.icon} className="size-3" ariaLabel={link.name} client:idle />
              {link.name}
            </Badge>
          </a>
        ))}
      </div>
    )}
  </CardFooter>
</Card>
