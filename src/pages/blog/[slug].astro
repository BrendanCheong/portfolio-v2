---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { ArrowLeft } from 'lucide-react';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={`${post.data.title} | Brendan Cheong`} description={post.data.description}>
  <Header slot="header" />
  
  <article class="pb-16">
    <a href="/blog" class="link mb-6 inline-flex items-center gap-1 text-sm">
      <ArrowLeft className="size-4" />
      Back to blog
    </a>

    <header class="mb-8">
      <h1 class="title text-3xl sm:text-4xl">{post.data.title}</h1>
      <p class="mt-2 text-muted-foreground">{post.data.description}</p>
      <p class="mt-2 text-sm text-muted-foreground">
        {new Date(post.data.date).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })}
      </p>
    </header>

    <div class="prose prose-lg max-w-none dark:prose-invert">
      <Content />
    </div>
  </article>

  <Footer slot="footer" />
</Layout>
