---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Projects from '@/components/Projects.astro';
---

<Layout title="Projects | Brendan Cheong">
  <Header slot="header" />
  
  <article class="flex flex-col gap-8 pb-16">
    <header>
      <h1 class="title text-4xl sm:text-5xl">projects</h1>
      <p class="mt-4 text-muted-foreground">
        A collection of projects I've worked on, from web applications to automation tools.
      </p>
    </header>

    <Projects />
  </article>

  <Footer slot="footer" />
</Layout>
